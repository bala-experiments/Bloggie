@model IEnumerable<Bloggie.Web.Models.DomainModels.Tag>
@{
    ViewData["Title"] = "List Tag";
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Admin- Display All Tags</h1>
    </div>
</div>

<div style="float:right;margin-top:20px;margin-right:73px;">
            <a class="btn btn-dark ms-1"
               asp-controller="AdminTags"
               asp-action="Add"
              >
                Add Tags
            </a>
        </div>

<form method="post">
    <div class="container py-5">

        
        <table class="table">
            <thead>
                <tr>
                    <td>ID</td>
                    <td>Name</td>
                    <td>Display Name</td>
                    <td>&nbsp;</td>
                </tr>
            </thead>
            @if (Model != null && Model.Any())
            {
                <tbody>
                    @foreach (var tag in Model)
                    {
                        <tr>
                            <td>@tag.ID</td>
                            <td>@tag.Name</td>
                            <td>@tag.DisplayName</td>
                            <td>
                                <a class="btn btn-dark ms-2"
                           asp-controller="AdminTags"
                           asp-action="Edit"
                           asp-route-id="@tag.ID">
                                    Edit
                                </a>

                                <button type="submit" class="btn btn-danger ms-2"
                                asp-area=""
                                asp-controller="AdminTags"
                                asp-action="Delete"
                                asp-route-ID="@tag.ID">
                                    Delete
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            }
            else
            {
                <tr>
                    <td colspan="3" align="center">No data found</td>
                </tr>
            }
        </table>

    </div>
</form>