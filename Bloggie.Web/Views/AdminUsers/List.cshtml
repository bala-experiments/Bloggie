@model Bloggie.Web.Models.ViewModels.UserViewModel
@{
    ViewData["Title"] = "List Users";
}

<form method="post">

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>List Users - Admin functionality</h1>
    </div>
</div>

<!-- Button trigger modal -->
<div class="mt-3 me-5">
    <div class="container">
        <table  style="border:0px;width:100%">
            <tr>
                <td style="text-align:center;color:red;font-weight:bold;">
                    <div id="hideDiv">
                            @Convert.ToString(TempData["Status"])
                    </div>
                   
                    </td>
                <td class="float-end">
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalLong">
                            Create User
                        </button>
                </td>
            </tr>
        </table>      
    </div>
   
</div>



    <div class="container py-5">

        <table class="table">
            <thead style="font-weight:bold">
                <tr>
                    <td>ID</td>
                    <td>User Name</td>
                    <td>Email Address</td>
                    <td>&nbsp;</td>
                </tr>
            </thead>
            @if (Model.UsersList != null && Model.UsersList.Any())
            {
                <tbody>
                    @foreach (var tag in Model.UsersList)
                    {
                        <tr>
                            <td>@tag.Id</td>
                            <td>@tag.Username</td>
                            <td>@tag.EmailAddress</td>
                            <td>                            

                                <button type="submit" class="btn btn-danger ms-2"
                                asp-area=""
                                asp-controller="AdminUsers"
                                asp-action="Delete"
                                asp-route-ID="@tag.Id">
                                    Delete
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            }
            else
            {
                <tr>
                    <td colspan="3" align="center">No data found</td>
                </tr>
            }
        </table>

    </div>

    <!-- Modal -->

    <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Create User</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="border:none;">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">UserName</label>
                        <input type="text" class="form-control" id="_username" asp-for="UserName" value=""/>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email Address</label>
                        <input type="text" class="form-control" id="_emailaddress" asp-for="EmailAddress" value=""/>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <input type="password" class="form-control" id="_password" asp-for="Password" value="" />
                    </div>
                    <div class="mb-1">                        
                        <input type="checkbox" class="form-check-input" id="_user" checked disabled/>
                        <label class="form-label" for="_user" >User Role</label>
                    </div>
                    <div class="mb-3">
                        <input type="checkbox" class="form-check-input" id="isadminuser" name="isadminuser" asp-for="IsAdminUser" />
                        <label class="form-check-label">Admin Role</label>
                    </div>
                    
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" asp-action="PostUser">Save changes</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    <script type="text/javascript">
        $(function () {
            setTimeout(function () { $("#hideDiv").fadeOut(1500); }, 2000)

        })
    </script>
</form>




